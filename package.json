{
  "name": "content-builder-agent",
  "version": "2.0.0",
  "description": "Content Builder Agent powered by Deep Agents - supports blog posts and social media content",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "vitest run",
    "test:watch": "vitest",
    "langgraph:dev": "npx @langchain/langgraph-cli dev"
  },
  "dependencies": {
    "deepagents": "file:../deepagentsjs/libs/deepagents",
    "@langchain/core": "^1.1.16",
    "@langchain/langgraph": "^1.1.1",
    "@langchain/anthropic": "^1.3.11",
    "@langchain/openai": "^1.2.3",
    "@langchain/tavily": "^1.2.0",
    "@mendable/firecrawl-js": "^4.11.2",
    "@arcadeai/arcadejs": "^1.0.0",
    "twitter-api-v2": "^1.17.0",
    "cheerio": "^1.0.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@langchain/langgraph-cli": "^0.0.35",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
